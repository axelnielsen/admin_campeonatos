
<div class="box box-info">
            <div class="box-header with-border">
              <h3 class="box-title">Nueva Región</h3>
            </div>
            <!-- /.box-header -->
            <!-- form start -->
            <form class="form-horizontal">
              <div class="box-body">

            <%= simple_form_for @region do |f| %>
            <% if region.errors.any? %>
                <div id="error_explanation">
                  <h2><%= pluralize(region.errors.count, "error") %> Error al guardar:</h2>

                  <ul>
                  <% region.errors.full_messages.each do |message| %>
                    <li><%= message %></li>
                  <% end %>
                  </ul>
                </div>
              <% end %>
             <div class="form-group">
             <label for="text" class="col-sm-1 control-label"></label>
             <div class="col-sm-10">
              <%= f.input :name , placeholder:'Región', required: true, error:'El campo nombre de región es obligatorio', label: false %>
             </div>
             </div>
             <!-- /.box-body -->
              <div class="box-footer">
                    <%= link_to "Cancelar", regions_path , class: "btn btn-warning"%>              
                    <%= f.button :submit, class: "btn btn-info pull-right"%>
            <% end %>
                           </div>
              <!-- /.box-footer -->
            </form>
          </div>





